---
// Example component that demonstrates how to integrate UI from Google AI Studio
// This is a sample Hero section that you can replace with your own Google AI Studio generated code

interface Props {
  title?: string;
  subtitle?: string;
  ctaText?: string;
  ctaLink?: string;
}

const { 
  title = "Welcome to VARA", 
  subtitle = "This is a sample component showing how to integrate Google AI Studio UI",
  ctaText = "Get Started",
  ctaLink = "/Landing-Page_VARA"
} = Astro.props;
---

<section class="bg-gradient-to-r from-blue-600 to-purple-600 text-white py-20">
  <div class="max-w-6xl mx-auto px-4">
    <div class="text-center">
      <h1 class="text-5xl font-bold mb-6">
        {title}
      </h1>
      <p class="text-xl mb-8 opacity-90">
        {subtitle}
      </p>
      <a 
        href={ctaLink}
        class="inline-block bg-white text-blue-600 px-8 py-3 rounded-lg font-semibold hover:bg-gray-100 transition-colors"
      >
        {ctaText}
      </a>
    </div>
  </div>
</section>

