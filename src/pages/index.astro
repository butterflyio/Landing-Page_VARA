---
import Layout from '../layouts/Layout.astro';

// This fetches data from your Heroku link
const strapiUrl = import.meta.env.PUBLIC_STRAPI_URL || 'http://localhost:1337';

// Temporarily disabled until Strapi content is ready
// const response = await fetch(`${strapiUrl}/api/posts?populate=*`);
// const json = await response.json();
// const data = json.data || [];

// Placeholder data
const data = [];
---

<Layout>
	<main class="max-w-4xl mx-auto py-20 px-4">
		<header class="mb-12 border-b pb-8">
			<h1 class="text-4xl font-black text-gray-900">Live Content</h1>
			<p class="text-gray-500 italic">Connected to: {strapiUrl}</p>
		</header>

		<!-- Google AI Studio Template Links -->
		<div class="mb-12 bg-gradient-to-r from-blue-50 to-purple-50 rounded-2xl p-8 border border-blue-200">
			<h2 class="text-2xl font-bold text-gray-900 mb-4">
				<span aria-hidden="true">ğŸš€</span> Google AI Studio Integration
			</h2>
			<p class="text-gray-700 mb-6">
				Easily integrate Google AI Studio generated UI components into your project!
			</p>
			<div class="grid md:grid-cols-2 gap-4">
				<a 
					href="/Landing-Page_VARA/paste" 
					class="block bg-blue-600 hover:bg-blue-700 text-white rounded-lg p-6 transition-colors shadow-md hover:shadow-lg"
					aria-label="Navigate to paste Google AI Studio code template"
				>
					<div class="text-3xl mb-2" aria-hidden="true">ğŸ“‹</div>
					<h3 class="text-xl font-bold mb-2">Paste Your Code</h3>
					<p class="text-blue-100">Ready-to-use template for your Google AI Studio code</p>
				</a>
				<a 
					href="/Landing-Page_VARA/example" 
					class="block bg-purple-600 hover:bg-purple-700 text-white rounded-lg p-6 transition-colors shadow-md hover:shadow-lg"
					aria-label="Navigate to view Google AI Studio integration example"
				>
					<div class="text-3xl mb-2" aria-hidden="true">ğŸ‘ï¸</div>
					<h3 class="text-xl font-bold mb-2">View Example</h3>
					<p class="text-purple-100">See how to integrate generated components</p>
				</a>
			</div>
			<div class="mt-6 text-center">
				<a 
					href="/Landing-Page_VARA/sanad" 
					class="inline-block text-blue-600 hover:text-blue-800 font-semibold"
				>
					Or check out the Sanad landing page â†’
				</a>
			</div>
		</div>

		<div class="grid gap-6">
			{data.length > 0 ? (
				data.map((item) => (
					<div class="bg-white p-8 rounded-2xl shadow-md border border-gray-100 hover:shadow-lg transition-shadow">
						<h2 class="text-2xl font-bold text-blue-700">
							{item.attributes.Title || "Untitled Entry"}
						</h2>
						<p class="mt-4 text-gray-600 leading-relaxed text-lg">
							{item.attributes.Description || "No content found in the Description field."}
						</p>
					</div>
				))
			) : (
				<div class="p-10 bg-blue-50 border border-blue-200 rounded-2xl text-blue-800 text-center">
					<p class="font-bold text-xl">No content found yet!</p>
					<p class="mt-2 opacity-80">Make sure you have created entries in Strapi, clicked "Publish", and set Public permissions.</p>
				</div>
			)}
		</div>
	</main>
</Layout>
