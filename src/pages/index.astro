---
import Layout from '../layouts/Layout.astro';

// This fetches data from your Heroku link
const strapiUrl = import.meta.env.PUBLIC_STRAPI_URL || 'http://localhost:1337';

// Temporarily disabled until Strapi content is ready
// const response = await fetch(`${strapiUrl}/api/posts?populate=*`);
// const json = await response.json();
// const data = json.data || [];

// Placeholder data
const data = [];
---

<Layout>
	<main class="max-w-4xl mx-auto py-20 px-4">
		<header class="mb-12 border-b pb-8">
			<h1 class="text-4xl font-black text-gray-900">Live Content</h1>
			<p class="text-gray-500 italic">Connected to: {strapiUrl}</p>
		</header>

		<div class="grid gap-6">
			{data.length > 0 ? (
				data.map((item) => (
					<div class="bg-white p-8 rounded-2xl shadow-md border border-gray-100 hover:shadow-lg transition-shadow">
						<h2 class="text-2xl font-bold text-blue-700">
							{item.attributes.Title || "Untitled Entry"}
						</h2>
						<p class="mt-4 text-gray-600 leading-relaxed text-lg">
							{item.attributes.Description || "No content found in the Description field."}
						</p>
					</div>
				))
			) : (
				<div class="p-10 bg-blue-50 border border-blue-200 rounded-2xl text-blue-800 text-center">
					<p class="font-bold text-xl">No content found yet!</p>
					<p class="mt-2 opacity-80">Make sure you have created entries in Strapi, clicked "Publish", and set Public permissions.</p>
				</div>
			)}
		</div>
	</main>
</Layout>
